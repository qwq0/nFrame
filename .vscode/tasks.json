    "version": "2.0.0",
    "tasks": [
        {
            "label": "build lib",
            "type": "shell",
            "command": "rollup -i src/lib/nframe.js -o dist/nframe.js -f es",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build lib (iife)",
            "type": "shell",
            "command": "rollup -i src/lib/nframe.js -o dist/nframe.iife.js -n nFrame -f iife",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        },
        {
            "label": "build doc",
            "type": "shell",
            "command": "jsdoc -r -d doc/nframe/ src/lib/",
            "problemMatcher": [],
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}